<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">

	<display-name>tests-telosys-tiny-mvc</display-name>
  
	<servlet>
		<servlet-name>action</servlet-name>
		<servlet-class>org.nanoj.web.tinymvc.servlet.ActionServlet</servlet-class>
		<init-param>
			<param-name>templatesFolder</param-name>
			<param-value>/WEB-INF/templates/</param-value>
		</init-param>
		<init-param>
			<param-name>pagesFolder</param-name>
			<param-value>/WEB-INF/pages/</param-value>
		</init-param>
		<init-param>
			<param-name>pagesSuffix</param-name>
			<param-value>.jsp</param-value>
		</init-param>
		<init-param>
			<param-name>defaultAction</param-name>
			<param-value>index</param-value>
		</init-param>
		<!-- Choose naming convention or specific action provider -->
		<init-param>
			<param-name>actionsPackage</param-name>
			<param-value>org.demo.web.actions</param-value> 
		</init-param>
		<!-- 
		<init-param>
			<param-name>actionProvider</param-name>
			<param-value>org.demo.actions.DemoActionProvider</param-value> 
		</init-param>
		 -->
	</servlet>
  
	<servlet-mapping>
		<servlet-name>action</servlet-name>
		<url-pattern>/action/*</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>action</welcome-file>
	</welcome-file-list>
  
</web-app>